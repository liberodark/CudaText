# Depends on: python

name=cudatext
version=1.64.0.5
description="Cross-platform text editor"
url="https://github.com/Alexey-T/CudaText"
packager="liberodark<liberodark@gmail.com>"
source=("https://netix.dl.sourceforge.net/project/cudatext/release/Linux/cudatext_${pkgver}-1_gtk2_amd64.deb"
	$pkgname.desktop
        $pkgname.png)
        
package() {
  cd $srcdir
  tar xvf data.tar.xz
  cp -r usr $pkgdir
  install -vDm644 $srcdir/$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
  install -vDm644 $srcdir/$pkgname.png $pkgdir/usr/share/pixmaps/$pkgname.png
}
