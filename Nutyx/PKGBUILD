# Depends on: python

name=cudatext
version=1.64.0.5
description="Cross-platform text editor"
url="https://github.com/Alexey-T/CudaText"
packager="liberodark<liberodark@gmail.com>"
source=("https://netix.dl.sourceforge.net/project/cudatext/release/Linux/cudatext_${version}-1_gtk2_amd64.deb"
	$name.desktop
        $name.png)
        
package() {
  cd $srcdir
  tar xvf data.tar.xz
  cp -r usr $pkgdir
  install -vDm644 $srcdir/$name.desktop $pkgdir/usr/share/applications/$name.desktop
  install -vDm644 $srcdir/$name.png $pkgdir/usr/share/pixmaps/$name.png
}
